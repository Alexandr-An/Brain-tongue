<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/background_mani_game_levels"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/main_background" />

    <LinearLayout
        android:id="@+id/Container1_game_levels_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/button_punctuation_game_levels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/punctuation_button_game_levels"
            android:layout_marginBottom="15dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black95"
            android:textSize="23sp"
            android:textStyle="bold"
            android:background="@drawable/button_main_stroke_black95_press_white"/>

        <Button
            android:id="@+id/button_words_game_levels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/words"
            android:layout_marginBottom="15dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black95"
            android:textSize="23sp"
            android:textStyle="bold"
            android:background="@drawable/button_main_stroke_black95_press_white"/>

        <Button
            android:id="@+id/button_accents_game_levels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/accents"
            android:layout_marginBottom="15dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black95"
            android:textSize="23sp"
            android:textStyle="bold"
            android:background="@drawable/button_main_stroke_black95_press_white"/>

        <Button
            android:id="@+id/button_different_game_levels_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/different"
            android:layout_marginBottom="15dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black95"
            android:textSize="23sp"
            android:textStyle="bold"
            android:background="@drawable/button_main_stroke_black95_press_white"/>

        <Button
            android:id="@+id/button_different_game_levels_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/different"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black95"
            android:textSize="23sp"
            android:textStyle="bold"
            android:background="@drawable/button_main_stroke_black95_press_white"/>
    </LinearLayout>
</RelativeLayout>